<%- include header %>
<h1><%= title %></h1>
<div class="article main-content">
    <h4><%= post.time.day %></h4>
    <p>
       <%- post.post %>
    </p>
    <% if (user) { %>
    <h3><a href="/remove/<%= post.blogTitle %>">删除</a></h3>
    <% } %>
</div>
<div class="comment main-content">
 <h2>评论区</h2>
 <% post.comments.forEach(function (comment, index) { %>
    <div class="comment-item">
      <h4><%= comment.name %>   <span>回复于</span>   <%= comment.time %></h4>
      <p><%= comment.content %></p>
    </div>
 <% }) %>
<form role="form" class="comment-form" method="post">
  <div class="form-group">
    <label>姓名:</label>
    <input type="text" class="form-control" name="name">
  </div>
  <div class="form-group">
    <label>邮箱:</label>
    <input type="email" class="form-control" name="email">
  </div>
  <div class="form-group">
    <label>发表评论:</label>
    <textarea name="content" class="input form-control"></textarea>
  </div>
  <button type="submit" class="button btn btn-default">发表</button>
</form>
</div>   
<%- include footer %>
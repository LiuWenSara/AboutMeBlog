<%- include header %>
<h1><%= title %></h1>
<form role="form" class="article-form main-content" method="post">
  <div class="form-group">
    <label>标题:</label>
    <input type="text" class="form-control" name="blogTitle">
  </div>
  <div class="form-group">
    <label>图片地址:</label>
    <input type="text" class="form-control" name="image">
  </div>
  <div class="form-group">
    <label>正文:</label>
    <textarea name="post" class="input form-control"></textarea>
  </div>
  <button type="submit" class="button btn btn-default btn-ms">发表</button>
</form>
<%- include footer %>